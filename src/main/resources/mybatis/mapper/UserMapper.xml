<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit.sp.mapper.UserMapper">
	<resultMap id="UserResultMap" type="com.bit.sp.dto.UserDto">
		<result property="id" column="id" />
		<result property="username" column="username" />
		<result property="status" column="status" />
		<result property="email" column="email" />
	</resultMap>

	<select id="getUsersByStatusAndDates" parameterType="map" resultType="com.bit.sp.dto.UserDto">
    SELECT * 
    FROM public.get_users_by_status_and_dates(
        #{status, jdbcType=VARCHAR},
        #{startDate, jdbcType=DATE},
        #{endDate, jdbcType=DATE}
    )
</select>
</mapper>
