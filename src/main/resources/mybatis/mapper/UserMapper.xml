<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit.sp.mapper.UserMapper">
	<resultMap id="UserResultMap" type="com.bit.sp.dto.UserDto">
		<result property="id" column="id" />
		<result property="username" column="username" />
		<result property="status" column="status" />
		<result property="email" column="email" />
		<result property="createdDate" column="created_date" />
	</resultMap>

	<select id="getUsersByStatusAndDates" statementType="CALLABLE" resultMap="UserResultMap">
    { call public.get_users_by_status_and_dates(
        #{status, mode=IN, jdbcType=VARCHAR},
        #{startDate, mode=IN, jdbcType=DATE}::date,
        #{endDate, mode=IN, jdbcType=DATE}::date,
        #{refcursor, mode=OUT, jdbcType=CURSOR, resultMap=UserResultMap}
    ) }
</select>
</mapper>
